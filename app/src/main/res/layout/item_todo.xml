<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/blk_s"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:id="@+id/t_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="16sp"
            android:textColor="@color/white_p"
            android:layout_toStartOf="@id/remove"
            />

        <TextView
            android:id="@+id/t_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textStyle="italic"
            android:textColor="@color/light_grey"
            android:layout_below="@id/t_title"
            />


        <LinearLayout
            android:id="@+id/b"
            android:layout_below="@id/t_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/t_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status : TODO, IN-PROGRESS, DONE"
                android:textSize="11sp"
                android:textColor="@color/light_blue"
                />

            <TextView
                android:id="@+id/t_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/grey_secondary"
                android:gravity="end"
                android:textSize="11sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_outline_24"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="5dp"
            app:tint="@color/white_s"
            android:background="@drawable/curve_bg"
            android:backgroundTint="#303030"
            android:padding="3dp"
            />

        <LinearLayout
            android:id="@+id/timeer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/b"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_pause_24"
                app:tint="@color/white_s"
                android:background="@drawable/curve_bg"
                android:backgroundTint="#303030"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_marginHorizontal="10dp"
                />

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_play_arrow_24"
                app:tint="@color/white_s"
                android:background="@drawable/curve_bg"
                android:backgroundTint="#303030"
                android:padding="2dp"
                android:visibility="visible"
                android:layout_marginHorizontal="10dp"
                />
            <TextView
                android:id="@+id/time_lft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00"
                android:textColor="@color/blue_green"
                android:textSize="13sp"
                android:visibility="visible"
                />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>